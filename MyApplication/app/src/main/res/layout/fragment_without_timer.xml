<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.dashboard.WithoutTimerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/projectText"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@id/date"
        />
        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dateText"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:inputType="date"
            app:layout_constraintBottom_toTopOf="@+id/task" />


        <EditText
            android:id="@+id/task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/taskText"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toTopOf="@+id/tags"
            />

        <EditText
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tagsText"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/tags" />



        <EditText
            android:id="@+id/startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/startTime"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/tags"
            app:layout_constraintBottom_toTopOf="@id/endTime"/>
        <EditText
            android:id="@+id/endTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/EndTime"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/endTime"
            app:layout_constraintBottom_toTopOf="@id/save"/>
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:text="Save"
            android:theme="@style/Button.green"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/endTime" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>